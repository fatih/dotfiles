{
  "builders": [
    {
      "type": "digitalocean",
      "image": "debian-9-x64",
      "region": "fra1",
      "size": "s-4vcpu-8gb",
      "ssh_username": "root",
      "snapshot_name": "fatih-dev-{{timestamp}}",
      "state_timeout": "20m"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt-get update"
      ]
    },
    {
      "type": "file",
      "source": "./user.sh",
      "destination": "/"
    },
    {
      "type": "shell",
      "script": "./build.sh"
    }
  ]
}
