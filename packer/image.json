{
  "variables": {
    "region": "",
  },
  "builders": [
    {
      "type": "digitalocean",
      "image": "debian-9-x64",
      "region": "{{user `region`}}",
      "size": "512mb",
      "ssh_username": "root",
      "snapshot_name": "fatih-dev-{{{{timestamp}}}}",
      "state_timeout": "20m"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt-get update"
      ]
    },
    {
      "type": "shell",
      "script": "./build.sh"
    }
  ]
}
