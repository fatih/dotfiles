# Use Git's default (reverse chronological) order, never automatically
# use topo-order for the commit graph
set commit-order = default

# Limit number of commits loaded by default to 1000
set main-options = -n 1000

# Don't show staged and unstaged changes in the main view
set show-changes = no

# Optionally, use the old and faster but less acurate graph renderer
set main-view-commit-title-graph = v1

# Gruvbox colorscheme â€” faded accents (inherits terminal background)
# red=#9d0006(88) green=#79740e(100) yellow=#b57614(136)
# blue=#076678(24) purple=#8f3f71(96) aqua=#427b58(65) orange=#af3a03(130)
color default default default
color cursor default 130 bold
color title-focus default 244 bold
color title-blur default 248
color id 130 default bold
color main-commit default default
color author 24 default
color date 100 default
color diff-header 136 default bold
color diff-index 136 default
color diff-oldmode 136 default
color diff-newmode 136 default
color "rename from" 136 default
color "rename to" 136 default
color diff-chunk 96 default
color "Merge:" 24 default
color "--- " 88 default
color "+++ " 100 default
color "@@" 96 default
color diff-stat 24 default
color diff-add 100 default
color diff-del 88 default
color "diff-add-highlight" 100 default bold
color "diff-del-highlight" 88 default bold
color status 100 default
color "Author:" 130 default
color "Commit:" 130 default
color "AuthorDate:" 100 default
color "CommitDate:" 100 default
color "Date:" 100 default
color graph-commit 130 default bold
color palette-0 130 default
color palette-1 24 default
color palette-2 100 default
color palette-3 136 default
color palette-4 88 default
color palette-5 96 default
color palette-6 65 default
color delimiter 244 default
color main-tracked 100 default bold
color main-tag 136 default bold
color main-local-tag 136 default
color main-remote 88 default
color main-ref 24 default bold
color main-head 130 default bold

bind generic r refresh
bind status d !@?rm -rf %(file) # delete untracked files
bind main y @sh -c "printf '%(commit)' | pbcopy"
bind diff y @sh -c "printf '%(commit)' | pbcopy"
bind log y @sh -c "printf '%(commit)' | pbcopy"
bind blame y @sh -c "printf '%(commit)' | pbcopy"
bind refs y @sh -c "printf '%(commit)' | pbcopy"


# Allow moving in the main menu while displaying a diff in the bottom of the
# screen.
bind generic J next
bind generic K previous
bind generic G move-last-line
bind status A !?git commit -S --amend
bind status C !git commit --signoff
